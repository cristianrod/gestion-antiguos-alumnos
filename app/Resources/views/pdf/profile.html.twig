<h1 class="titulo">Datos Personales</h1>

<p class="nombre" style="font-family: handsean, serif; margin-bottom: 0px;">{{ app.user.nombre }} {{ app.user.apellido1 }} {{ app.user.apellido2 }}</p>

<table width="100%" style="margin-top: 0px;">
    <tr>
       <td width="30%"><img src="{{ asset(app.user.fotografia is null ? 'subidas/fotos/usuarios/defaultuser.jpg' : 'subidas/fotos/usuarios/' ~ app.user.fotografia) }}" alt="Foto de perfil" width="150px" height="150px" /></td>
        <td width="5%;"></td>
        <td><p><b><span style="font-family: handyvol, serif">H</span>Dirección:</b> {{ app.user.curriculum.direccion }}</p>
            <p><b><span style="font-family: handyvol, serif;">H</span>Localidad:</b> {{ app.user.curriculum.poblacion }}</p>
            <p><b><span style="font-family: handyvol, serif;">H</span>Provincia:</b> {{ app.user.curriculum.provincia.nombre }}</p>
            <p><b><span style="font-family: handyvol, serif">H</span>Teléfono:</b> {{ app.user.movil }}</p>
            <p><b><span style="font-family: handyvol, serif">H</span>Email:</b> {{ app.user.email }}</p>
            <p><b><span style="font-family: handyvol, serif">H</span>Fecha de Nacimiento:</b> {{ app.user.curriculum.fechanacimiento|date('d-m-Y') }}</p>
            <p><b><span style="font-family: handyvol, serif">H</span>Sexo:</b> {{ app.user.curriculum.sexo }}</p>
        </td>
    </tr>
</table>
<div>
    <h1 class="titulo">Formación Académica</h1>
    {{ app.user.curriculum.formaciones | raw }}
</div>
{% if app.user.curriculum.experiencias %}
<div>
    <h1 class="titulo">Experiencia Profesional</h1>
    {{ app.user.curriculum.experiencias | raw }}
</div>
{% endif %}
<div>
    <h1 class="titulo">Competencias Profesionales</h1>
    <table width="100%" style="margin-top: 20px;">
        <tr>
            <td width="50%" class="titulo-tabla">Lenguajes de Programación</td>
            <td width="2%"></td>
            <td>{{ app.user.curriculum.lenguajes|raw }}</td>
        </tr>
    </table>
    <table width="100%" style="margin-top: 20px;">
        <tr>
            <td width="50%" class="titulo-tabla">Sistemas Operativos</td>
            <td width="2%"></td>
            <td>{{ app.user.curriculum.sistemas|raw }}</td>
        </tr>
    </table>
    <table width="100%" style="margin-top: 20px;">
        <tr>
            <td width="50%" class="titulo-tabla">Bases de Datos</td>
            <td width="2%"></td>
            <td>{{ app.user.curriculum.basesdedatos|raw }}</td>
        </tr>
    </table>
    <table width="100%" style="margin-top: 20px;">
        <tr>
            <td width="50%" class="titulo-tabla">Programación/diseño web</td>
            <td width="2%"></td>
            <td>{{ app.user.curriculum.programacionweb|raw }}</td>
        </tr>
    </table>
</div>
{% if app.user.curriculum.compcomunicativas %}
    <div>
        <h1 class="titulo">Competencias comunicativas</h1>
        {{ app.user.curriculum.compcomunicativas | raw }}
    </div>
{% endif %}
{% if app.user.curriculum.comporganizativas %}
    <div>
        <h1 class="titulo">Competencias organizativas</h1>
        {{ app.user.curriculum.comporganizativas | raw }}
    </div>
{% endif %}
{% if app.user.curriculum.comppersonales %}
    <div>
        <h1 class="titulo">Competencias personales</h1>
        {{ app.user.curriculum.comppersonales | raw }}
    </div>
{% endif %}
{% if app.user.curriculum.infoadicional %}
    <div>
        <h1 class="titulo">Información Adicional</h1>
        {{ app.user.curriculum.infoadicional | raw }}
    </div>
{% endif %}

